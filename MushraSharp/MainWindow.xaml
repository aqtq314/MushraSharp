<Window x:Class="MushraSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MushraSharp"
        mc:Ignorable="d"
        Title="MUSHRA 听力评测" Width="800" Height="600"
        d:DataContext="{x:Static local:MasterVM.DesignerVM}">
  <DockPanel>
    <ToolBar DockPanel.Dock="Top">
      <TextBlock Text="缩放" Margin="5 0" VerticalAlignment="Center"/>
      <Slider x:Name="zoomSlider" Width="100" Minimum="0.5" Maximum="2" VerticalAlignment="Center" Value="1.5" LargeChange="0.25" SmallChange="0.05"/>
    </ToolBar>
    <Frame x:Name="frame" NavigationUIVisibility="Hidden">
      <FrameworkElement.LayoutTransform>
        <ScaleTransform x:Name="frameScaleTransform" ScaleX="{Binding Value, ElementName=zoomSlider}" ScaleY="{Binding Value, ElementName=zoomSlider}"/>
      </FrameworkElement.LayoutTransform>
    </Frame>
  </DockPanel>
</Window>
